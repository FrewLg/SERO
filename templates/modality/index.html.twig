{% extends 'base.html.twig' %}

{% block title %}Modality index{% endblock %}

{% block body %}
    <h1>Modality index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for modality in modalities %}
            <tr>
                <td>{{ modality.id }}</td>
                <td>{{ modality.name }}</td>
                <td>{{ modality.description }}</td>
                <td>{{ modality.createdAt ? modality.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ modality.updatedAt ? modality.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_modality_show', {'id': modality.id}) }}">show</a>
                    <a href="{{ path('app_modality_edit', {'id': modality.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_modality_new') }}">Create new</a>
{% endblock %}
