{% extends 'base.html.twig' %}

{% block title %}Modality{% endblock %}

{% block body %}
    <h1>Modality</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ modality.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ modality.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ modality.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ modality.createdAt ? modality.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ modality.updatedAt ? modality.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_modality_index') }}">back to list</a>

    <a href="{{ path('app_modality_edit', {'id': modality.id}) }}">edit</a>

