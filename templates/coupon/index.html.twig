{% extends 'base.html.twig' %}

{% block title %}Coupon index{% endblock %}

{% block body %}
    <h1>Coupon index</h1>
    <a href="{{ path('app_training_index') }}">back to training</a>
 <table class="table">
         
            <tr>
{% for coupon in alldirectorates %}
<td>
{{ coupon.name }}={{ coupon.coupons|length }}
</td>
        {% endfor %}
        </tr>
 <table class="table">
        
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CouponNumber</th>
                <th>Directorate</th>
                <th>Training</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coupon in coupons %}
            <tr>
                <td>{{ coupon.id }}</td>
                <td>{{ coupon.couponNumber }}</td>
                <td>{{ coupon.directorate.name }}</td>
                <td>{{ coupon.training.trainingRequest.trainingTopic.name }}</td>
                <td>{{ coupon.reservedAt ? coupon.reservedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ coupon.createdAt ? coupon.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_coupon_show', {'id': coupon.id}) }}">show</a>
                    <a href="{{ path('app_coupon_edit', {'id': coupon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 {% endblock %}
