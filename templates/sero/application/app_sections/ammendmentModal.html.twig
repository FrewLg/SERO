<!-- Button trigger modal-->
<button type="button" class="btn btn-primary m-4" data-toggle="modal" data-target="#AmmendmentModal">
	Submit a new Ammendment request
</button>

<!-- Modal-->
<div class="modal fade" id="AmmendmentModal" tabindex="-1" role="dialog" aria-labelledby="AmmendmentModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="AmmendmentModalLabel">New Version</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<i aria-hidden="true" class="ki ki-close"></i>
				</button>
			</div>
			<div class="modal-body">
				<form method="post" action="{{ path('new_ammendment', {'id': application.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
					{{ form_widget(ammendmentForm) }}

					<div class="modal-footer">
						<button type="submit" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Close</button>
						<button class="btn btn-primary font-weight-bold">{{ button_label|default('Save') }}</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
