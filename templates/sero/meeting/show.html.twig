{% extends 'base.html.twig' %}

{% block title %}Meeting
{% endblock %}

{% block body %}
<h1>Meeting</h1>

<table class="table">
	<tbody>
		<tr>
			<th>Id</th>
			<td>{{ meeting.id }}</td>
		</tr>
		<tr>
			<th>Number</th>
			<td>{{ meeting.number }}</td>
		</tr>
		<tr>
			<th>HeldAt</th>
			<td>{{ meeting.heldAt ? meeting.heldAt|date('Y-m-d H:i:s') : '' }}</td>
		</tr>
		<tr>
			<th>Status</th>
			<td>{{ meeting.status }}</td>
		</tr>
		<tr>
			<th>Note</th>
			<td>{{ meeting.note }}</td>
		</tr>
		<tr>
			<th>MinuteTakenAt</th>
			<td>{{ meeting.minuteTakenAt ? meeting.minuteTakenAt|date('Y-m-d H:i:s') : '' }}</td>
		</tr>
	</tbody>
</table>

<table class="table table-separate table-head-custom table-checkable dataTable no-footer dtr-inline collapsed" id="kt_datatable_2" role="grid" aria-describedby="kt_datatable_2_info">
	<thead>
		<tr>
			<th nowrap='nowrap'>
				<label class="checkbox checkbox-single">
					<input type="checkbox" id="select_all" class="group-checkable">
					<span></span>
				</label>
			</th>

			<th>Title</th>
			<th>Status</th>
			<th>Duration</th>
			<th>Meetings</th>
			<th>Submitted at</th>
			<th>actions</th>
		</tr>
	</thead>
	<tbody>
		<div id="searchResult">
			{% for application in meeting.applications %}
				<tr>
					<td nowrap='nowrap'>
						{{loop.index}}
					</td>
					<td>{{ application.title }}</td>
					<td>
						{% if application.meeting %}
							{{application.meeting.status }}
						{% endif %}
					</td>

					<td>{{ application.startDate ? application.startDate|date('d/m/y ') : '' }}-{{ application.endDate ? application.endDate|date('d/m/y ') : '' }}</td>
					<td>{{ application.meeting|length }}</td>
					<td>{{ application.createdAt ? application.createdAt|date('h:i d/m/y ') : '' }}</td>
					<td nowrap="nowrap">

						<a href="{{ path('app_history', {'id': application.id}) }}" class='btn btn-light-primary btn-sm'>history</a>
						<a href="{{ path('app_s_e_r_o_application_show', {'id': application.id}) }}" class='btn btn-light-success btn-sm'>show</a>
						<a href="{{ path('app_s_e_r_o_application_edit', {'id': application.id}) }}" class='btn btn-light-danger btn-sm'>edit</a>
						<a href="{{ path('ethical_clearance_cert', {'id': application.id}) }}" class='btn btn-secondary btn-sm'>Certify</a>
						<a href="{{ path('statement', {'id': application.id}) }}" class='btn btn-light-warning btn-sm'>statement</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			</div>
		</tbody>
	</tbody>
</table>{% endfor %}{# <a href="{{ path('app_s_e_r_o_meeting_index') }}">back to list</a> #}{# <a href="{{ path('app_s_e_r_o_meeting_edit', {'id': meeting.id}) }}">edit</a> #}{# {{ include('sero/meeting/_delete_form.html.twig') }} #}{% endblock %}
