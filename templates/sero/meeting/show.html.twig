{% extends 'base.html.twig' %}

{% block title %}Meeting{% endblock %}

{% block body %}
    <h1>Meeting</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meeting.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ meeting.number }}</td>
            </tr>
            <tr>
                <th>HeldAt</th>
                <td>{{ meeting.heldAt ? meeting.heldAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ meeting.status }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ meeting.note }}</td>
            </tr>
            <tr>
                <th>MinuteTakenAt</th>
                <td>{{ meeting.minuteTakenAt ? meeting.minuteTakenAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_s_e_r_o_meeting_index') }}">back to list</a>

    <a href="{{ path('app_s_e_r_o_meeting_edit', {'id': meeting.id}) }}">edit</a>

    {{ include('sero/meeting/_delete_form.html.twig') }}
{% endblock %}
