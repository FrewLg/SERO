
   <div class="m-6">
    <h1>Amendments</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Purpose</th>
                <th>Changes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for amendment in application.amendments %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ amendment.purpose }}</td>
                <td>{{ amendment.changes }}</td>
                <td>
                    {# <a href="{{ path('app_s_e_r_o_amendment_show', {'id': amendment.id}) }}">show</a>
                    <a href="{{ path('app_s_e_r_o_amendment_edit', {'id': amendment.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   </div>