{% extends 'base.html.twig' %}

{% block title %}ReviewForm
{% endblock %}

{% block body %}
 
	{# <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/> #}

	<div class="row">

		<div class="col-12 py-4">

			<div class="accordion  accordion-toggle-arrow" id="accordionExample4">
				<div class="card">
					<div class="card-header" id="headingOne4">
						<div class="card-title" data-toggle="collapse" data-target="#collapseOne4">
							<i class="flaticon2-layers-1"></i>
							Build Review Form
						</div>
					</div>
					<div id="collapseOne4" class="collapse  " data-parent="#accordionExample4">
						<div class="card-body">
							

			{# //// tabs #}
 
		  {{ include('sero/review_form/_form.html.twig') }}

 					 
			{# ////end tabs #}
						</div>

					</div>
				</div>


			</div>


		</div>
	</div>


	<div class="card card-custom gutter-b my-0">
		 
		<div class="card-body">
			<div class="example-preview">
				<ul class="nav nav-tabs" id="myTab" role="tablist">
					<li class="nav-item">
						<a class="nav-link active" id="home-tab" data-toggle="tab" href="#home">
							<span class="nav-icon">
								<i class="fa fa-calendar"></i>
							</span>
							<span class="nav-text">Form 
								 
							</span>


						</a>
					</li>
					 

				</ul>
				<div class="tab-content mt-5" id="myTabContent">
					<div class="tab-pane fade active show" id="home" role="tabpanel" aria-labelledby="home-tab">
						<div class="table-responsive">
{% for checklist in checklist_group %}
				{# .reviewChecklists|filter(checklist =>  (checklist.answerType==1 and not checklist.parent)) %} #}
				<b style="margin-left:10px">{{ toAlpha(loop.index)}}.
					{{checklist}}</b>
				<br>
				<ol style="list-style: none;">
					{% for review_checklist in checklist.reviewChecklists  |filter(review_checklist =>  (review_checklist.reviewForm== reviewForm)) %}

						<li>
							<b style="margin-right:5">
 
							<form method="post" action="{{ path('app_s_e_r_o_review_checklist_delete', {'id': review_checklist.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
							{{ loop.index}}. {{review_checklist.name}}  
								<span class="label label-sm label-light-info mr-2">{{ review_checklist.reviewerResponses|length }}</span>
                            
                            </b>
							{{review_checklist.answerType}}

                            <a href="{{ path('app_s_e_r_o_review_checklist_edit', {'id': review_checklist.id}) }}" class="btn btn-light-warning btn-sm">edit</a>

                            {% if review_checklist.reviewerResponses|length>0 %}
                             
								{% else %}
                                    
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review_checklist.id) }}">
								<button class="btn btn-light-danger btn-sm">Delete</button>
                            {% endif %}

							</form>

						</li>


					{% endfor %}
				</ol>

			{% endfor %}
						</div>
					</div>
					 
					<div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">Tab content 3</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
{% block javascripts %}
	<script type="text/javascript">
		$(document).ready(function () {
$(".select2").select2();
});
	</script>
{% endblock %}

 