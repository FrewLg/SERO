{% extends 'base.html.twig' %}

{% block title %}Facility  {% endblock %}

{% block body %}
     <div
		class="col-xxl-8 order-2 order-xxl-1">
		<!--begin::Advance Table Widget 2-->
		<div
			class="card card-custom card-stretch gutter-b">
			<!--begin::Header-->
			<div class="card-header border-0 pt-5">
				<h3 class="card-title align-items-start flex-column">
					<span class="card-label font-weight-bolder text-dark">Facility</span>
					<span class="text-muted mt-3 font-weight-bold font-size-sm">Lists</span>
				</h3>
    <a href="{{ path('app_facility_new') }}">Create new</a>
  
			</div> 
			<div
				class="card-body pt-3 pb-0">
				<!--begin::Table-->
				<div class="table-responsive">
 <table class="table table-bordered">
  <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facility in facilities %}
            <tr>
                <td>{{ facility.id }}</td>
                <td>{{ facility.name }}</td>
                <td>{{ facility.description }}</td>
                <td>
                    <a href="{{ path('app_facility_show', {'id': facility.id}) }}">show</a>
                    <a href="{{ path('app_facility_edit', {'id': facility.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
				<!--end::Table-->
			</div>
			<!--end::Body-->
		</div>
	</div>{% endblock %}
